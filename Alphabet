import java.util.Arrays;
import java.util.Scanner;

public class StringSorter {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);

        System.out.println("Enter the first string:");
        String str1 = input.nextLine().toLowerCase();

        System.out.println("Enter the second string:");
        String str2 = input.nextLine().toLowerCase();

        System.out.println("Enter the third string:");
        String str3 = input.nextLine().toLowerCase();

        int wordCount1 = countWords(str1);
        int wordCount2 = countWords(str2);
        int wordCount3 = countWords(str3);

        String[] strings = {str1, str2, str3};
        Arrays.sort(strings);

        System.out.println("Sorted strings:");
        for (String s : strings) {
            int wordCount = countWords(s);
            System.out.println(s + " (" + wordCount + " words)");
        }
    }

    public static int countWords(String s) {
        int count = 0;
        boolean isWord = false;
        for (int i = 0; i < s.length(); i++) {
            char c = s.charAt(i);
            if (Character.isLetter(c)) {
                if (!isWord) {
                    isWord = true;
                    count++;
                }
            } else {
                isWord = false;
            }
        }
        return count;
    }
}
